{% macro render_config(data, level=0) %}
    <div class="config-level-{{ level }}">
    {% for key, value in data.items() %}
        {% if value is mapping %}
            <div class="mb-2">
                <strong class="text-uppercase fs-6">{{ key | replace('_', ' ') }}</strong>
                {{ render_config(value, level + 1) }}
            </div>
        {% elif value %}
            <div class="d-flex justify-content-between">
                <span class="text-muted fs-7">{{ key | replace('_', ' ') | upper }}</span>
                <span class="fw-bold fs-7">{{ value }}</span>
            </div>
        {% endif %}
    {% endfor %}
    </div>
{% endmacro %}
